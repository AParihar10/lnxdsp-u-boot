/dts-v1/;

/ {
	model = "ADI sc594-som-ezkit";
	compatible = "adi,sc594-som-ezkit", "adi,sc59x";

	config {
		u-boot,spl-payload-offset = <0x20000>;
	};

	aliases {
		spi0 = "/spi@31027000";
		spi2 = "/spi@31030000";
		serial0 = &uart0;
	};

	soc {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "simple-bus";
		device_type = "soc";
		/*interrupt-parent = <&intc>;*/
		ranges;
		u-boot,dm-pre-reloc;

		uart0: serial@0x31003000 {
			compatible = "adi,uart4";
			reg = <0x31003000 0x1000>;
			adi,uart-port = <0>;
			status = "okay";
			u-boot,dm-pre-reloc;
		};

		qspi: spi@31027000 {
			compatible = "cdns,qspi-nor";
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x31027000 0x1000>,
				  <0x30400000 0x1000>;
			interrupts = <0 151 4>;
			/*clocks = <&qspi_clk>;*/
			ext-decoder = <0>;  /* external decoder */
			num-cs = <4>;
			fifo-depth = <128>;
			bus-num = <0>;
			status = "disabled";
			u-boot,dm-pre-reloc;
		};

		spi2: spi@31030000 {
			compatible = "adi,spi3";
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x31030000 0x1000>;
			bus-num = <2>;
			spi-max-frequency = <10000000>;
			status = "disabled";
			u-boot,dm-pre-reloc;
		};

	};
};

&qspi {
	status = "okay";

	flash0: is25lx256@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "is25lx256";
		reg = <0>;
		spi-max-frequency = <112000000>;
		tshsl-ns = <50>;
		tsd2d-ns = <50>;
		tchsh-ns = <4>;
		tslch-ns = <4>;
		u-boot,dm-pre-reloc;
	};
};

&spi2 {
	status = "okay";

/* mx66lm1g45 and is25lp512 are mutually exclusive */

/*
	flash1: mx66lm1g45@1 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "mx66lm1g45";
		reg = <1>;
		u-boot,dm-pre-reloc;
	};
*/

	flash1: is25lp512@2 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "is25lp512";
		reg = <1>;
		u-boot,dm-pre-reloc;
	};

};

